#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/mnt/c/Users/vercc/Documents/Udemy/4-natours/node_modules/mime/cli.js/node_modules:/mnt/c/Users/vercc/Documents/Udemy/4-natours/node_modules/mime/node_modules:/mnt/c/Users/vercc/Documents/Udemy/4-natours/node_modules:/mnt/c/Users/vercc/Documents/Udemy/node_modules:/mnt/c/Users/vercc/Documents/node_modules:/mnt/c/Users/vercc/node_modules:/mnt/c/Users/node_modules:/mnt/c/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../mime/cli.js" "$@"
else 
  exec node  "$basedir/../mime/cli.js" "$@"
fi
